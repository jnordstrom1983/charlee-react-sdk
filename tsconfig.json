{
    "extends": "@tsconfig/recommended/tsconfig.json",
    "compilerOptions": {
        "baseUrl": "src",
        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "jsx": "react",
        "module": "ESNext",
        "moduleResolution": "Node",
        "outDir": "dist",
        "rootDir": "src",
        "sourceMap": true,
        "sourceRoot": "src",
        "target": "ESNext"
      },
      "include": ["src/**/*"]
}